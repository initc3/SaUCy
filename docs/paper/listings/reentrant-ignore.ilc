letrec discardingF ... frP frA =
  let $($!m, frP$)$ = rd frP in
    wr m $->$ toA ;
    letrec iloop $\eUnit$ frP frA =
       (let $($_, frP$)$ = rd frP in
          wr Discard $->$ toP ;
	  iloop $\eUnit$ frP frA)
       $\boxplus$ (let $($!Ok, frA$)$ = rd frA in
	  wr m $->$ toQ ;
	  discardingF ... frP frA)
     in iloop $\eUnit$ frP frA
